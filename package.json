{
  "name": "webdriverio-mobile-framework",
  "version": "1.0.0",
  "description": "WebDriverIO mobile test automation framework for iOS and Android with Page Object Model",
  "main": "index.js",
  "scripts": {
    "test": "wdio run wdio.conf.ts",
    "test:android": "wdio run wdio.conf.ts",
    "test:ios": "wdio run wdio.ios.conf.ts",
    "test:demo": "wdio run wdio.conf.ts --spec ./src/tests/demo-login.spec.ts",
    "check:ios": "./scripts/check-ios-setup.sh",
    "setup:ios": "./scripts/setup-ios-app.sh",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "report": "allure generate ./allure-results --clean",
    "report:open": "allure generate ./allure-results --clean && allure open"
  },
  "keywords": [
    "webdriverio",
    "appium",
    "mobile",
    "testing",
    "automation",
    "pom",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@wdio/allure-reporter": "^8.27.0",
    "@wdio/appium-service": "^8.27.0",
    "@wdio/cli": "^8.27.0",
    "@wdio/local-runner": "^8.27.0",
    "@wdio/mocha-framework": "^8.27.0",
    "@wdio/spec-reporter": "^8.27.0",
    "allure-commandline": "^2.25.0",
    "appium": "^2.2.0",
    "appium-uiautomator2-driver": "^2.34.0",
    "appium-xcuitest-driver": "^5.11.0",
    "chai": "^6.2.1",
    "eslint": "^8.54.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
